  <div class="time" id="spain-time">Loading...</div>

  <h1>jas</h1>
  <div class="time" id="australia-time">Loading...</div>

  <script>
    function updateTimes() {
      const spainTime = new Date().toLocaleTimeString("en-US", {
        timeZone: "Europe/Madrid",
        hour: "2-digit",
        minute: "2-digit",
        hour12: true
      });

      const ausTime = new Date().toLocaleTimeString("en-US", {
        timeZone: "Australia/Sydney",
        hour: "2-digit",
        minute: "2-digit",
        hour12: true
      });

      document.getElementById("spain-time").textContent = spainTime;
      document.getElementById("australia-time").textContent = ausTime;
    }

    updateTimes();
    setInterval(updateTimes, 1000);
  </script>
</body>
